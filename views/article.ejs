<%- include partials/header.ejs %>
<%- include partials/homenavbar.ejs %>

<body>
    <header class="masthead">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1><%= article.title %></h1>
                        <h2 class="subheading"><%- article.subTitle %></h2>
                        <span class="meta">Publicado por
                            <a href="https://github.com/edu2019/blog_painel"><%= article.userName %></a>
                            - <%= moment(article.createdAt).format('DD MMM YYYY HH:mm') %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>    
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">    
                    <%- article.body %>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include partials/footer.ejs %>